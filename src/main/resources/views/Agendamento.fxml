<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AgendamentoController">
   <children>
      <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300" prefHeight="250" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50">
         <children>
            <ComboBox fx:id="comboServicos" promptText="Serviços" style="-fx-font-size: 14px;" />
            <DatePicker fx:id="datePicker" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="comboHorario" promptText="Horário" style="-fx-font-size: 14px;" />
            <Button fx:id="btnAgendar" mnemonicParsing="false" onAction="#agendarServico" text="Agendar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;" />
            <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltarParaDashboard" text="Voltar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;" />
         </children>
      </VBox>
   </children>
</AnchorPane>
